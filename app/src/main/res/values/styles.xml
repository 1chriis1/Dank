<resources>

    <style name="DankTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="DankTheme.DrawsStatusBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
    </style>

    <style name="DankTheme.TransparentBackground">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DankTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <style name="DankTextAppearance.Toolbar">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="DankSeparator">
        <item name="android:background">@color/white_opacity_05</item>
    </style>

    <style name="DankSeparator.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Button" />

    <style name="DankProgressBar" />

    <style name="DankProgressBar.Horizontal" parent="android:Widget.Material.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="DankProgressBar.Horizontal.TopAligned">
        <item name="android:layout_marginTop">-7dp</item>
    </style>

    <style name="DankProgressBar.Horizontal.BottomAligned">
        <item name="android:layout_marginBottom">-7dp</item>
    </style>

    <!-- Subreddit -->
    <style name="SubredditPickerSearchFieldTheme">
        <item name="android:colorControlNormal">@color/gray_800</item>
        <item name="android:colorControlActivated">@color/gray_500</item>
    </style>

    <style name="Button.SubredditPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/color_primary_dark</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">start|center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">@dimen/spacing12</item>
        <item name="android:paddingTop">@dimen/spacing12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:textSize">@dimen/textsize18</item>
    </style>

    <style name="Button.UserProfileSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/userprofile_no_messages</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:drawablePadding">@dimen/spacing24</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingBottom">@dimen/spacing12</item>
        <item name="android:paddingEnd">@dimen/spacing16</item>
        <item name="android:paddingStart">@dimen/spacing16</item>
        <item name="android:paddingTop">@dimen/spacing12</item>
        <item name="android:textSize">@dimen/textsize16</item>
    </style>

</resources>
