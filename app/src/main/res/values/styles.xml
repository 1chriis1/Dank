<resources>

    <style name="DankTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="DankTheme.DrawsStatusBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
    </style>

    <style name="DankTheme.TransparentBackground">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DankTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <style name="DankTextAppearance.Toolbar">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="DankSeparator">
        <item name="android:background">@color/white_opacity_05</item>
    </style>

    <style name="DankSeparator.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Button" />

    <style name="Button.ToolbarMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingEnd">@dimen/spacing12</item>
        <item name="android:paddingStart">@dimen/spacing12</item>
        <item name="android:paddingTop">@dimen/spacing8</item>
        <item name="android:paddingBottom">@dimen/spacing8</item>
        <item name="android:textColor">@color/gray_200</item>
    </style>

    <style name="DankProgressBar" />

    <style name="DankProgressBar.Horizontal" parent="android:Widget.Material.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="DankProgressBar.Horizontal.TopAligned">
        <item name="android:layout_marginTop">-7dp</item>
    </style>

    <style name="DankProgressBar.Horizontal.BottomAligned">
        <item name="android:layout_marginBottom">-7dp</item>
    </style>

</resources>
