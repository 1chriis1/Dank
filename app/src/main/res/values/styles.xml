<resources>

    <style name="AppTheme" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorAccent">@color/color_accent</item>
    </style>

    <style name="DankTextAppearance" parent="@android:style/TextAppearance.Material.Widget.Toolbar.Title" />

    <style name="DankTextAppearance.Toolbar">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="DankSeparator">
        <item name="android:background">@color/white_opacity_05</item>
    </style>

    <style name="DankSeparator.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>
