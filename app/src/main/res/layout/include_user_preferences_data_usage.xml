  <TextView
    style="@style/DankPreferencesGroupTitle.WithTopSpacing"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing4"
    android:text="@string/userprefs_group_caching" />

  <TextView
    style="@style/DankPreferenceGroupSummary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/userprefs_group_caching_summary" />

  <me.saket.dank.widgets.prefs.UserPreferenceButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:prefbutton_summary="Only on WiFi"
    app:prefbutton_title="@string/userprefs_prefetch_images" />

