    android:layout_height="wrap_content"
    android:text="@string/userprefs_group_messaging" />

  <me.saket.dank.widgets.prefs.UserPreferenceButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:prefbutton_summary="@string/userprefs_datausage_message_sync_period_and_connection"
    app:prefbutton_title="@string/userprefs_datausage_check_for_new_messages" />

