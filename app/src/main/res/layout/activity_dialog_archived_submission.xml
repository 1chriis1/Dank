<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/archivedsubmission_background"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/archivedsubmission_dialog_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/spacing48"
    android:background="@drawable/background_popup_window"
    android:elevation="@dimen/elevation_fab"
    android:orientation="horizontal"
    android:transitionName="@string/transition_locked_submission"
    tools:ignore="UselessParent">

    <ImageView
      android:layout_width="80dp"
      android:layout_height="match_parent"
      android:background="@color/white_opacity_05"
      android:contentDescription="@string/submission_archiveddialog_cd_thumbnail"
      android:scaleType="center"
      android:src="@drawable/ic_archive_32dp" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="@dimen/spacing8"
      android:paddingEnd="@dimen/spacing12"
      android:paddingStart="@dimen/spacing24"
      android:paddingTop="@dimen/spacing24">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing12"
        android:text="@string/archived_submission_title"
        android:textColor="@color/white_opacity_80"
        android:textSize="@dimen/textsize16" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing20"
        android:text="@string/archived_submission_message" />

      <Button
        android:id="@+id/archivedsubmission_dismiss_button"
        style="?attr/buttonBarPositiveButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/spacing4"
        android:text="@string/archived_submission_action" />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
