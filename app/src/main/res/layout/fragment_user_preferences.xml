<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <me.saket.dank.widgets.DankToolbar
        android:id="@id/toolbar"
        style="@style/DankToolbar"
        tools:layout_marginTop="25dp"
        android:fitsSystemWindows="true"
        app:navigationIcon="@drawable/ic_toolbar_close_24dp" />

    <ViewSwitcher
        android:id="@+id/userpreferences_viewswitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/userpreferences_container_misc"
            layout="@layout/include_preferences_misc" />
    </ViewSwitcher>
</LinearLayout>
