<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/window_background"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/appshortcut_label"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:drawablePadding="@dimen/spacing16"
      android:drawableStart="@drawable/ic_subreddits_20dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:padding="@dimen/spacing16"
      android:textColor="@color/white_opacity_80"
      tools:ignore="SelectableText"
      tools:text="r/Android" />

    <ImageButton
      android:id="@+id/appshortcut_delete"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:contentDescription="@string/appshortcuts_cd_delete_shortcut"
      android:padding="@dimen/spacing16"
      android:src="@drawable/ic_delete_20dp"
      android:tint="@color/gray_500" />

    <ImageView
      android:id="@+id/appshortcut_drag"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:contentDescription="@string/appshortcuts_cd_reorder_shortcut"
      android:padding="@dimen/spacing16"
      android:src="@drawable/ic_drag_handle_24dp"
      android:tint="@color/gray_500" />
  </LinearLayout>

  <View style="@style/DankSeparator.VerticalContent" />
</LinearLayout>
