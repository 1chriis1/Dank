<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true">

  <me.saket.dank.widgets.binoculars.FlickDismissLayout
    android:id="@+id/albumviewerimage_flickdismisslayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true">

    <me.saket.dank.widgets.ZoomableImageView
      android:id="@+id/albumviewerimage_imageview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      tools:background="@color/blue_gray_700"
      tools:layout_height="240dp" />

    <me.saket.dank.widgets.ProgressWithFileSizeView
      android:id="@+id/albumviewerimage_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:visibility="gone"
      tools:visibility="visible" />
  </me.saket.dank.widgets.binoculars.FlickDismissLayout>

  <View
    android:id="@+id/albumviewerimage_title_description_dimming"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_opacity_30" />

  <me.saket.dank.ui.media.MediaAlbumViewerTitleDescriptionView
    android:id="@+id/albumviewerimage_title_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</FrameLayout>
