<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/submission_image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_600">

        <!-- TODO: set content-description in code. -->
        <!-- For image/gif. -->
        <me.saket.dank.widgets.ZoomableImageView
            android:id="@+id/submission_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <com.devbrackets.android.exomedia.ui.widget.VideoView
        android:id="@+id/submission_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/window_background"
        app:useTextureViewBacking="true" />

    <!-- Shadow behind the toolbar so that when the toolbar is transparent (in
         case of photo/video submissions, the toolbar icons are still visible. -->
    <View
        android:id="@+id/submission_toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/toolbar"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_submission_toolbar_shadows" />

    <!-- At runtime, this ViewGroup is moved to inside the
         comment list as the header and its top-padding is set. -->
    <LinearLayout
        android:id="@+id/submission_comments_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing8"
        tools:background="@color/window_background"
        tools:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/submission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing4"
            android:layout_marginEnd="@dimen/spacing16"
            android:layout_marginStart="@dimen/spacing16"
            android:paddingTop="@dimen/spacing16"
            android:textColor="@color/gray_100"
            android:textSize="@dimen/textsize16"
            tools:text="I did a thing in Photoshop, and am fairly proud of it." />

        <TextView
            android:id="@+id/submission_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing8"
            android:layout_marginEnd="@dimen/spacing16"
            android:layout_marginStart="@dimen/spacing16"
            android:textAllCaps="true"
            android:textColor="@color/gray_600"
            android:textSize="@dimen/textsize12"
            tools:text="/r/pics" />

        <TextView
            android:id="@+id/submission_selfpost_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing16"
            android:layout_marginStart="@dimen/spacing16" />

        <RelativeLayout
            android:id="@+id/submission_link_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing16"
            android:layout_marginStart="@dimen/spacing16"
            android:layout_marginTop="@dimen/spacing8"
            android:background="@drawable/background_submission_link"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/submission_link_icon_container"
                android:layout_width="@dimen/submission_link_icon_width_without_thumbnail"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/submission_link_title_container"
                android:layout_alignTop="@+id/submission_link_title_container"
                android:background="@color/white_opacity_05">

                <!-- ContentDescription is set in SubmissionLinkedRedditLinkViewHolder -->
                <ImageView
                    android:id="@+id/submission_link_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <!-- ContentDescription is set in SubmissionLinkedRedditLinkViewHolder -->
                <ImageView
                    android:id="@+id/submission_link_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_link_black_24dp"
                    tools:ignore="ContentDescription"
                    tools:tint="@color/gray_400" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/submission_link_title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/submission_link_icon_container"
                android:animateLayoutChanges="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/spacing16">

                <TextView
                    android:id="@+id/submission_link_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/submission_link_title"
                    tools:text="/r/MaliciousCompliance" />

                <TextView
                    android:id="@+id/submission_link_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/submission_link_subtitle"
                    tools:text="https://np.reddit.com/r/MaliciousCompliance/cadasd" />
            </LinearLayout>

            <me.saket.dank.widgets.SubmissionAnimatedProgressBar
                android:id="@+id/submission_link_progress"
                style="@style/DankProgressBar.Horizontal.BottomAligned"
                android:layout_alignBottom="@+id/submission_link_title_container"
                android:indeterminateTint="@color/black_opacity_40" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/submission_comments_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing16"
            android:layout_marginStart="@dimen/spacing16"
            android:layout_marginTop="@dimen/spacing16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateTint="@color/white_opacity_40" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing12"
                android:text="@string/login_loading_comments"
                android:textColor="@color/white_opacity_40" />
        </LinearLayout>
    </LinearLayout>

    <me.saket.dank.widgets.ScrollingRecyclerViewSheet
        android:id="@+id/submission_comment_list_parent_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/window_background"
        tools:layout_below="@+id/submission_comments_header">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/submission_comment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            tools:paddingStart="@dimen/spacing16"
            tools:paddingTop="@dimen/spacing16" />
    </me.saket.dank.widgets.ScrollingRecyclerViewSheet>

    <!-- This progressView sticks to the toolbar's bottom when the WebView
         is visible, otherwise scrolls with the comments sheet. -->
    <me.saket.dank.widgets.SubmissionAnimatedProgressBar
        android:id="@+id/submission_content_progress"
        style="@style/DankProgressBar.Horizontal.TopAligned"
        android:layout_below="@id/toolbar" />

    <!-- Acts as the toolbar's background. -->
    <me.saket.dank.widgets.AnimatedToolbarBackground
        android:id="@+id/submission_toolbar_background"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:translationZ="@dimen/elevation_toolbar"
        tools:layout_marginTop="25dp" />

    <!-- Note: the elevation to this toolbar is set on AnimatableToolbarBackground
         instead. -->
    <me.saket.dank.widgets.DankToolbar
        android:id="@id/toolbar"
        style="@style/DankToolbar"
        android:background="@color/transparent"
        app:navigationIcon="@drawable/ic_toolbar_close_24dp"
        app:navigationIconTint="@color/white"
        tools:layout_marginTop="25dp" />
</RelativeLayout>
