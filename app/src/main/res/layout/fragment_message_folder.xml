<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_marginTop="25dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messagefolder_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/messagefolder_first_load_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/messagefolder_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messagefolder_empty_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing8"
            android:text="@string/inbox_empty_state_title"
            android:textColor="@color/gray_400"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/messagefolder_empty_state_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing16"
            android:layout_marginStart="@dimen/spacing16"
            android:layout_marginTop="@dimen/spacing4"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/spacing4"
            android:text="@string/inbox_empty_state_message_for_username_mentions"
            android:textColor="@color/gray_500"
            android:textSize="@dimen/textsize14" />
    </LinearLayout>
</FrameLayout>
