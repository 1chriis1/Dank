<?xml version="1.0" encoding="utf-8"?>
<me.saket.dank.widgets.InboxUI.IndependentExpandablePageLayout android:id="@+id/userpreferences_root_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:elevation="20dp"
    android:orientation="vertical">

    <me.saket.dank.widgets.InboxUI.InboxRecyclerView
        android:id="@+id/userpreferences_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="?android:attr/actionBarSize"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical" />

    <me.saket.dank.widgets.DankToolbar
        android:id="@id/toolbar"
        style="@style/DankToolbar"
        app:navigationIcon="@drawable/ic_toolbar_close_24dp" />

    <me.saket.dank.widgets.InboxUI.ExpandablePageLayout
        android:id="@+id/userpreferences_preferences_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background">

        <me.saket.dank.widgets.DankToolbar
            android:id="@+id/userpreferences_preference_toolbar"
            style="@style/DankToolbar" />
    </me.saket.dank.widgets.InboxUI.ExpandablePageLayout>
</me.saket.dank.widgets.InboxUI.IndependentExpandablePageLayout>
