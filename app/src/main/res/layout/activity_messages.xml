<?xml version="1.0" encoding="utf-8"?>
<me.saket.dank.widgets.InboxUI.IndependentExpandablePageLayout
    android:id="@+id/messages_root"
    style="@style/DankPullCollapsibleActivityPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_marginTop="25dp">

    <me.saket.dank.widgets.DankToolbar
        android:id="@+id/toolbar"
        style="@style/DankToolbar"
        android:fitsSystemWindows="true"
        app:navigationIcon="@drawable/ic_toolbar_close_24dp" />

    <me.saket.dank.widgets.TabLayoutWithCustomFont
        android:id="@+id/messages_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/viewpager_tablayout_start_spacing_with_toolbar_title"
        android:layout_below="@+id/toolbar"
        android:background="@color/toolbar"
        app:tabMode="scrollable"
        android:clipToPadding="false"
        android:elevation="@dimen/elevation_toolbar"
        tools:ignore="RtlSymmetry" />

    <android.support.v4.view.ViewPager
        android:id="@+id/messages_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/messages_tablayout" />
</me.saket.dank.widgets.InboxUI.IndependentExpandablePageLayout>
