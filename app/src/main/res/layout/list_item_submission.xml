<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/submission_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing16"
        android:layout_marginRight="@dimen/spacing16"
        android:layout_marginTop="@dimen/spacing16"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/gray_100"
        android:textSize="@dimen/textsize16"
        tools:text="Title" />

    <TextView
        android:id="@+id/submission_item_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing16"
        android:layout_marginRight="@dimen/spacing16"
        android:layout_marginTop="@dimen/spacing4"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/gray_600"
        tools:text="/r/todayilearned" />

    <TextView
        android:id="@+id/submission_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing16"
        android:layout_marginRight="@dimen/spacing16"
        android:layout_marginTop="@dimen/spacing8"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="3"
        android:visibility="gone"
        tools:text="Description" />

    <View
        style="@style/DankSeparator.Vertical"
        android:layout_marginTop="@dimen/spacing16" />
</LinearLayout>
