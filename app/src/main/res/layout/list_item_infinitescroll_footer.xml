<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="@dimen/spacing16"
    android:paddingTop="@dimen/spacing16"
    tools:layout_marginTop="25dp">

    <ProgressBar
        android:id="@+id/infinitescroll_footer_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <me.saket.dank.widgets.TintableCompoundDrawableTextView
        android:id="@+id/infinitescroll_footer_error"
        style="@style/DankInfiniteScrollHeaderFooterTextWithIcon"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/spacing12"
        android:paddingTop="@dimen/spacing12"
        android:text="@string/inbox_error_failed_to_load_more_messages" />
</FrameLayout>
